<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <report
            id="account_invoices2"
            model="account.invoice"
            string="Invoices after Payment"
            report_type="qweb-pdf"
            name="account_prince.report_invoice_payment_view"
            file="account_prince.report_invoice_payment"
            attachment="(object.state in ('open','in_payment','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
            groups="account.group_account_invoice"
        />
    <!-- This xml file generate report of invoice and display product category wise. -->

     <template id="report_invoice_payment_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <t t-set="o" t-value="doc.with_context(lang=lang)"/>



      <table class="border-0" style="width:100%" >
          <t t-if="doc.partner_id.name">
                                 <tr   >
                                    <td  style="text-align: left;width:15%;" class="border-0">
                                     <span style="font-weight:bold;">Vendor Name:</span>

                                    </td>
                                       <td  style="text-align: center;width:70%" class="border-0">

                                         <span t-esc="doc.partner_id.name"/>
                                        <span style="font-weight:bold;" t-esc="doc.partner_id.customer_arabic_name"></span>
                                    </td>
                                       <td   style="text-align: right;width:15%" class="border-0">

                                       <span style="font-weight:bold;">اسم المورد: ‫‬</span>

                                    </td>
                                 </tr>
          </t>
          <t t-if="doc.partner_id.mobile">
 <tr >
                                    <td  style="text-align: left;width:15%" class="border-0">
                                     <span style="font-weight:bold;">Mobile:</span>

                                    </td>
                                       <td  style="text-align: center;width:70%" class="border-0">

                                         <span t-esc="doc.partner_id.mobile"/>
                                       
                                    </td>
                                       <td   style="text-align: right;width:15%" class="border-0">

                                       <span style="font-weight:bold;">التليفون المحمول: ‫‬ ‫‬</span>
                                    </td>
                                 </tr>
          </t>
          <t t-if="doc.partner_id.email">
           <tr >
                                    <td  style="text-align: left;width:15%" class="border-0">
                                     <span style="font-weight:bold;">Email:</span>

                                    </td>
                                       <td  style="text-align: center;width:70%" class="border-0">

                                       <span t-esc="doc.partner_id.email"/>
                                    </td>
                                       <td   style="text-align: right;width:15%" class="border-0">

                                       <span style="font-weight:bold;">البريد الإلكتروني: </span>
                                    </td>
                                 </tr>
          </t>
<t t-if="doc.partner_id.vat">
           <tr >
                                    <td  style="text-align: left;width:15%" class="border-0">
                                     <span style="font-weight:bold;">Vat:</span>

                                    </td>
                                       <td  style="text-align: center;width:70%" class="border-0">

                                       <span t-esc="doc.partner_id.vat"/>
                                    </td>
                                       <td   style="text-align: right;width:15%" class="border-0">

                                       <span style="font-weight:bold;">‫الرقم‬ ‫الضريبة‬ :</span>
                                    </td>
                                 </tr>
          </t>
          <t t-if="doc.partner_id.street">
           <tr >
                                    <td  style="text-align: left;width:15%" class="border-0">
                                     <span style="font-weight:bold;">Address :</span>

                                    </td>
                                       <td  style="text-align: center;width:70%" class="border-0">

                                       <span t-esc="doc.partner_id.street"/>
                                    </td>
                                       <td   style="text-align: right;width:15%" class="border-0">

                                       <span style="font-weight:bold;"> ‫عنوان‬ : </span>
                                    </td>
                                 </tr>
          </t>
          <t t-if="doc.partner_id.street2">
           <tr >
                                    <td  style="text-align: left;width:15%" class="border-0">
                                     <span style="font-weight:bold;">Address:</span>

                                    </td>
                                       <td  style="text-align: center;width:70%" class="border-0">

                                       <span t-esc="doc.partner_id.street2"/>
                                    </td>
                                       <td   style="text-align: right;width:15%" class="border-0">

                                       <span style="font-weight:bold;">street2 </span>
                                    </td>
                                 </tr>
          </t>

                             </table>
                <div class="page">
                    <h2>
                        <span t-if="doc.type == 'out_invoice' and doc.state in ('open', 'in_payment', 'paid')">Invoice</span>
                        <span t-if="doc.type == 'out_invoice' and doc.state == 'draft'">Draft Invoice</span>
                        <span t-if="doc.type == 'out_invoice' and doc.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="doc.type == 'out_refund'">Credit Note</span>
                        <span t-if="doc.type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="doc.type == 'in_invoice'">Vendor Bill</span>
                        <span t-field="doc.number"/>
                    </h2>

                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" t-if="doc.name" name="description">
                            <strong>Description:</strong>
                            <p class="m-0" t-field="doc.name"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="doc.date_invoice" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="doc.date_invoice"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="doc.date_due and doc.type == 'out_invoice' and doc.state in ('open', 'in_payment', 'paid')" name="due_date">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="doc.date_due"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="doc.origin" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="doc.origin"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="doc.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="doc.partner_id.ref"/>
                        </div>
                        <div name="reference" class="col-auto mw-100 mb-2" t-if="doc.reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="doc.reference"/>
                        </div>
                    </div>

                    <t t-set="display_discount" t-value="any([l.discount for l in doc.invoice_line_ids])"/>

                    <table class="table table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="6"/>
                                <th class="text-left"><span>Description</span></th>
                                <th class="d-none text-left"><span>Source Document</span></th>
                                <th class="text-right"><span>Quantity</span></th>
                                <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                <th t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.(%)</span>
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                <th class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="doc.invoice_line_ids" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                        <td class="d-none"><span t-field="line.origin"/></td>
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.uom_id" groups="uom.group_uom"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.invoice_line_tax_ids))"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or doc.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm;page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(doc.tax_line_ids) == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                <td><span t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
<!--        payment-->
    <t t-set="payments_vals" t-value="doc._get_payments_vals()"/>
                <t t-foreach="payments_vals" t-as="payment_vals">
                    <tr>
                        <td>
                            <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                        </td>
                        <td class="text-right">
                            <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <t t-if="len(payments_vals) > 0">
                    <tr class="border-black">
                        <td><strong>Amount Due</strong></td>
                        <td class="text-right">
                             <span t-field="doc.residual"/>
                        </td>
                    </tr>
                </t>
                                </table>
                            </div>
                        </div>
                    </div  >

                       <div style="margin-left:200px;margin-bottom:120px;">
                         <img class="img-fluid" style="width:150px;height:150px; margin-bottom:10px;" dir="ltr" src="account_prince/static/web/image/Stamp.jpeg"/>
                          <t t-set="payments_vals" t-value="doc._get_payments_vals()"/>
                           <t t-if="len(payments_vals) > 0">
                                <div style="font-family: 'Meie Script', cursive;">
                                        <p>Prince Mischal Al Saud</p>
                                  <img class="img-fluid" style="width:150px;height:50px; margin-bottom:10px;" dir="ltr" src="account_prince/static/web/image/sig.jpg"/>

                                  </div>

                                <t t-foreach="payments_vals" t-as="payment_vals">
                               <strong> Paid on </strong><t t-esc="payment_vals['date']" />
                           </t>
                           </t>

                    </div>
                    <p t-if="doc.reference">
                        Please use the following communication for your payment : <b><span t-field="doc.reference"/></b>
                    </p>
                    <p t-if="doc.comment" name="comment">
                        <span t-field="doc.comment"/>
                    </p>
                    <p t-if="doc.payment_term_id" name="payment_term">
                        <span t-field="doc.payment_term_id.note"/>
                    </p>
                    <p t-if="doc.fiscal_position_id.note" name="note">
                        <span t-field="doc.fiscal_position_id.note"/>
                    </p>
                    <div id="qrcode" t-if="(doc.company_id.qr_code) and (doc.currency_id.name == 'EUR') and (doc.partner_bank_id.acc_number != False)">
                        <p t-if="(doc.partner_bank_id.qr_code_valid)">
                            <strong class="text-center">Scan me with your banking app.</strong><br/><br/>
                            <img class="border border-dark rounded" t-att-src="doc.partner_bank_id.build_qr_code_url(doc.residual,(doc.reference) if (doc.reference) else doc.number)"/>
                        </p>
                        <p t-if="(doc.partner_bank_id.qr_code_valid == False)">
                            <strong class="text-center">The SEPA QR Code informations are not set correctly.</strong><br/>
                        </p>
                    </div>

                    <div >

                        <p>
                        This invoice automatically generated in our system and should be considered as an original/  يتم انشاء هذه الفاتورة تلقيا فى نظامنا ويجب اعتبارها فاتورة اصلية
                    </p>
                    </div>

                </div>

            </t>

                </t>

            </t>

    </template>


</odoo>
