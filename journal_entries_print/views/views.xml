<odoo>
    <data>
        <record id="invoice_Source_move" model="ir.ui.view">
            <field name="name">account.move.source</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="action_print" string="print" type="object" groups="account.group_account_invoice"/>

                </xpath>

                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </xpath>
            </field>
        </record>

<!--_____________________________________________________________________________________________________________________________________________-->

        <record model="ir.ui.view" id="partner_instructor_form_view">
            <field name="name">partner.instructor</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">

             <xpath expr="//header" position="after">
                 <header>
<!--                     <button name="action_draft" type="object"-->
<!--                             string="Prepare"-->
<!--                             states="open"/>-->
<!--                     <button name="action_confirm" type="object"-->
<!--                             string="Review" states="open,process"-->
<!--                             class="oe_highlight"/>-->
<!--                     <button name="action_process" type="object"-->
<!--                             string="Approve" states="open,Confirmed,confirm"-->
<!--                             class="oe_highlight"/>-->
                 </header>
             </xpath>

              

<!--              <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='statement_line_ids']/field[@name='line_ids']/tree[1]/field[@name='ref']" position="after">-->
<!--    <field name="x_studio_invoice_image_1" options="{&quot;size&quot;: [0, 90]}" widget="image" string="Invoice Image"/>-->
<!--  </xpath>-->

                <xpath expr="//sheet" position="after">

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>

            </field>
        </record>

        <record model="ir.actions.act_window" id="contact_list_action">
            <field name="name">Contacts</field>
            <field name="res_model">account.bank.statement</field>
            <field name="view_mode">tree,form</field>


        </record>

        <menuitem id="main_petty_cash" name="Petty Cash"/>
        <menuitem action="account.action_view_bank_statement_tree" name="Petty Cash Entry"
                  id="menu_journal_entry" parent="main_petty_cash" groups="group_petty_cash"/>


        <record id="only_responsible_can_see" model="ir.rule">
            <field name="name">Only Petty Cash</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="groups" eval="[(4, ref('journal_entries_print.group_petty_cash'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">['|',('create_uid.user_id','=',user.id),('create_uid.user_id','=',False)]
            </field>
        </record>

<!-- __________________________________________________________________________________________________________________________________       -->

        <record id="post_button" model="ir.ui.view">
            <field name="name">journal.post.button</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
