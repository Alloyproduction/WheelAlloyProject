<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>


        <template id="claim_profile_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <!--                        <div class="page">-->
                        <h2>Petty Cash</h2>

                        <style>
                            table {
                            font-family: arial;
                            border-collapse: collapse;
                            width: 100%;
                            margin: auto;
                            }
                            th {
                            border: 1px solid black;
                            text-align: left;
                            padding: 8px;
                            }
                            td{
                            border: 1px solid black;
                            text-align: left;
                            padding: 9px;
                            }

                            .img-responsive, .thumbnail &gt; img, .thumbnail a &gt; img, .carousel-inner &gt; .item &gt;
                            img, .carousel-inner &gt; .item &gt; a &gt; img {
                            width :200px !important;
                            }

                        </style>
                        <t t-foreach="docs" t-as="o">
                            <div align="center" style="font-size:20px;">
                                <!--						<strong><span t-field="o.name"/></strong>-->
                                <!--						<strong><span t-field="o.move_line_ids[0].move_id.name"/></strong>-->
                            </div>

                            <div class="page" style="font-size:15px;">

                                      <caption>Petty Cash1</caption>

                                <table style="margin-top:20px">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Label</th>
                                            <th>Partner</th>
                                            <th>Reference Number</th>
                                            <th>PO Reference</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.line_ids" t-as="line">
                                            <tr>
                                                <td>
                                                    <span t-field="line.date"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.name"/>
                                                </td>

                                                <td>
                                                    <span t-field="line.partner_id.name"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.name"/>
                                                </td>

                                                <td>
                                                    <span t-field="line.ref"/>
                                                </td>

                                                <td>
                                                    <span t-field="line.amount"/>
                                                </td>

                                            </tr>
                                        </t>
                                    </tbody>

                                    <tfooter>
								<tr>
									<td colspan="5"></td>
									<td>
										<span t-esc="o.balance_end"/>
									</td>
								</tr>
							</tfooter>

                                </table>
                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>