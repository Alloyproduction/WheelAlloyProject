<?xml version="1.0" ?>
<odoo>

        <record id="alloy_wheel_email_template" model="mail.template">
            <field name="name">Wheel Checking: Send by email</field>
            <field name="model_id" ref="wheel_report.model_wheel_report_wheel_report"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject"> Wheel checking Repot (Ref ${object.code})</field>
<!--             <field name="subject">${object.company_id.name} Wheel Report (Ref ${object.code or 'n/a'})</field>-->

            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.partner_id.name}
                        <br /><br />
                        Here is your Wheel Checking Report With Reference ${object.code}
                        for the Vehicle ${object.vehicle_name}
                        whit Plate number ${object.plate_num}
                        <br /><br />
                        Do not hesitate to contact us if you have any question.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="wheel_report_pdf"/>
            <field name="report_name">Wheel Report _${(object.code)}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
</odoo>