<odoo>
    <data>

        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="wheel_report.list">
            <field name="name">wheel_report list</field>
            <field name="model">wheel_report.wheel_report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="so_num"/>
                    <field name="vehicle_name"/>
                    <field name="plate_num"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="wheel_report.form">
            <field name="name">wheel_report form</field>
            <field name="model">wheel_report.wheel_report</field>
            <field name="arch" type="xml">


                <form string="Wheel Report">

                    <header>
                        <button name="action_send_email" type="object"
                                string="Send By Email"
                                class="oe_highlight"
                        />
                    </header>


                    <sheet string="Wheel Report Sheet">

                    <group>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    </group>

                 <group>
                    <field name="so_num"/>
                    <field name="vehicle_name"/>
                    <field name="plate_num"/>
                    <field name="job_card"/>
                     <field name="claim_num"/>
                    <field name="note" string="Note"/>
                  </group>
                    </sheet>

           <notebook>
                <page string="Notes">
                    <field name="line_ids">
                        <tree>
                            <!--                                decoration-muted="cancelled == True">-->
                       <field name="product_id"/>
                       <field name="tire_status" />
                        <field name="tire_has_cut" widget="radio"/>
                        <field name="lips" widget="radio"/>
                        <field name="tire"/>
                        <field name="spoke"/>
                        <field name="barrel"/>
                        <field name="crack"/>
                        <field name="sensor"/>
                        <field name="bent"/>
                        <field name="spoke_problem"/>
                        <field name="rim_finished"/>
                        <field name="reject"/>
                        </tree>
                    </field>
                </page>
          </notebook>

                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="wheel_report.action_window">
            <field name="name">Wheel Report Form</field>
            <field name="res_model">wheel_report.wheel_report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem
                id="wheel_report.menu_root"
                name="Wheel Report"
                sequence="3"
                action="wheel_report.action_window"
                parent="sale.sale_menu_root"/>
        
        <!--        groups="account.group_account_user"-->


            <act_window
            context="{'search_default_product_id': [active_id], 'default_product_id': active_id}"
            id="action_wheel_checking_report_line_tree"
            name="Wheel Checking Report"
            res_model="wheel.report.line"
            />
<!--            src_model="product.product"-->
<!--            groups="base.group_user"/>-->


       ################################################################################################################################

        <record id="sale_order_form_inherit_for_wheel_check" model="ir.ui.view">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            <!--        attrs="{'invisible': [('is_task_Q_delivered', '=', False)]}"-->


            <xpath expr="//header" position="inside">

                <button name="create_wheel_check" string="Check the Wheel"
                        type="object" class="oe_highlight"
                        />
            </xpath>

<!--           <xpath expr="//field[@name='user_id']" position="after">-->
<!--                <field name="wheel_check_id" />-->
<!--            </xpath>-->
            </field>
        </record>

    </data>
    </odoo>
