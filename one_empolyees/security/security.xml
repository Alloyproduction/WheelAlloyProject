<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!--  new security category-->
    <record id="employee_security_categ" model="ir.module.category">
      <field name="name">One Employees</field>
      <field name="sequence" eval="1"/>
    </record>
    <!--    Normal Employee user -->
    <record id="employee_security_user" model="res.groups">
      <field name="name">user</field>
      <field name="category_id" ref="employee_security_categ"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
     <!--    Manager-->
    <record id="employee_security_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="category_id" ref="employee_security_categ"/>
      <field name="implied_ids" eval="[(4, ref('employee_security_user'))]"/>
    </record>
    <!--    Normal Employee (New Group)-->
    <record id="employee_security_normal_user" model="res.groups">
      <field name="name">normal user</field>
<!--      <field name="category_id" ref="employee_security_categ"/>-->
    </record>
    <record id="see_only_himself" model="ir.rule">
      <field name="name">Normal User Employee</field>
      <field ref="model_emp_form" name="model_id"/>
      <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
      <field name="groups" eval="[(4, ref('employee_security_normal_user'))]"/>
    </record>



  </data>
</odoo>
