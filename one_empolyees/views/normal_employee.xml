<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--    form view-->
    <record id="one_normal_employee_view_form" model="ir.ui.view">
      <field name="name">mo_normal_employee_form</field>
      <field name="model">emp.form</field>
      <field name="arch" type="xml">
        <form string="Employee">
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button class="oe_stat_button" name="document_view_ticket" type="object" icon="fa-money">
                <field string="loans" name="document_count_ticket" widget="statinfo"/>
              </button>
              <button class="oe_stat_button" name="create_skip_installment" type="object" icon="fa-money">
                <field string="Skip Installment" name="count_skip_inst" widget="statinfo"/>
              </button>
            </div>
            <field name="emp_image" widget="image" class="oe_avatar"/>
            <group>
              <group>
                <field name="employee_id" force_save="1"/>
                <field name="emp_manager_id" force_save="1"/>
                <field name="emp_job_id" force_save="1"/>
              </group>
              <group>
                <field name="emp_dt_id" force_save="1"/>
                <field name="emp_dt_manager_id" force_save="1"/>
              </group>
              <group>
                <field name="identification_no" force_save="1"/>
                <field name="residency_no" force_save="1"/>
                <field name="job_no" force_save="1"/>
              </group>

            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
    <!--kanban view-->
    <record id="one_emp_form_view_kanban" model="ir.ui.view">
      <field name="name">mo.emp.form.kanban</field>
      <field name="model">emp.form</field>
      <field name="arch" type="xml">
        <kanban class="o_res_partner_kanban">
          <field name="id"/>
          <field name="employee_id"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img alt="Avatar" t-att-src="kanban_image('emp.form', 'emp_image',record.id.raw_value)"/>
                </div>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="employee_id"/>
                  </strong>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <!--  tree view-->
    <record id="one_emp_form_view_tree" model="ir.ui.view">
      <field name="name">mo.emp.form.view.tree</field>
      <field name="model">emp.form</field>
      <field name="arch" type="xml">
        <tree string="Employees Tree">
          <field name="employee_id"/>
          <field name="emp_job_id"/>
          <field name="emp_dt_id"/>
        </tree>
      </field>
    </record>
    <!--    action-->
    <record id="one_normal_employee_action" model="ir.actions.act_window">
      <field name="name">Employee</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">emp.form</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_mo_normal_employee" name="Employees" action="one_normal_employee_action"
              web_icon="one_empolyees,static/description/icon.png"
              sequence="85"
    />

  </data>
</odoo>