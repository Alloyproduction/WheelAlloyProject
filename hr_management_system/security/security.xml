<?xml version="1.0" encoding="utf-8"?>

<odoo>
<data>

<!--******************************-->
<!--    mo. HR Custom Groups      -->
<!--******************************-->


<!--    Manager (New Group)-->
    <record id="group_hr_manager_demo" model="res.groups">
        <field name="name">Employees Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(5,0), (4, ref('hr.group_hr_user'))]"/>
    </record>

<!--    Overridden Administrator Group-->
    <record id="hr.group_hr_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="comment">The user will have access to the human resources configuration as well as statistic reports.</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(5,0), (4, ref('group_hr_manager_demo'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


<!--******************************-->
<!--   mo. HR Custom Groups Rules -->
<!--******************************-->

<!--    Employee-->
    <record id="restrict_employee" model="ir.rule">
        <field name="name">Restrict Employee</field>
        <field ref="hr.model_hr_employee" name="model_id"/>
        <field name="domain_force"> ['|',('user_id', '=', user.id),('parent_id.user_id','=', user.id)] </field>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>


<!--    Manager-->
    <record id="restrict_employee_manager" model="ir.rule">
        <field name="name">HR Manager full access</field>
        <field ref="hr.model_hr_employee" name="model_id"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('hr_management_system.group_hr_manager_demo'))]"/>
    </record>

<!--    Administrator-->
    <record id="restrict_employee_administrator" model="ir.rule">
        <field name="name">HR Administrator full access</field>
        <field ref="hr.model_hr_employee" name="model_id"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
    </record>

</data>
</odoo>
