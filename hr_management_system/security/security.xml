<?xml version="1.0" encoding="utf-8"?>

<odoo>
<data>

<!--******************************-->
<!--    mo. HR Custom Groups      -->
<!--******************************-->


<!--    Manager (New Group)-->
    <record id="group_hr_manager_demo" model="res.groups">
        <field name="name">Employees Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(5,0), (4, ref('hr.group_hr_user'))]"/>
    </record>

<!--    Overridden Administrator Group-->
    <record id="hr.group_hr_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="comment">The user will have access to the human resources configuration as well as statistic reports.</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(5,0), (4, ref('group_hr_manager_demo'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


<!--******************************-->
<!--   mo. HR Custom Groups Rules -->
<!--******************************-->

<!--    Employee-->
    <record id="restrict_employee" model="ir.rule">
        <field name="name">Restrict Employee</field>
        <field ref="hr.model_hr_employee" name="model_id"/>
        <field name="domain_force"> ['|',('user_id', '=', user.id),('parent_id.user_id','=', user.id)] </field>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>


<!--    Manager-->
    <record id="restrict_employee_manager" model="ir.rule">
        <field name="name">HR Manager full access</field>
        <field ref="hr.model_hr_employee" name="model_id"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('hr_management_system.group_hr_manager_demo'))]"/>
    </record>

    Administrator
    <record id="restrict_employee_administrator" model="ir.rule">
        <field name="name">HR Administrator full access</field>
        <field ref="hr.model_hr_employee" name="model_id"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
    </record>

    #############################################################################################################

    <record id="benefit_approve_access_categ" model="ir.module.category">
        <field name="name">Benefit Management</field>
    </record>

   <record id="group_admin_benefit_approve" model="res.groups">
        <field name="name">Benefit admin</field>
        <field name="category_id" ref="benefit_approve_access_categ"/>
        <!--         <field name="implied_ids" eval="[(4, ref('petty_cash.group_petty_cash'))]"/>-->
    </record>

   <record id="group_user_benefit_approve" model="res.groups">
        <field name="name">Benefit User</field>
        <field name="category_id" ref="benefit_approve_access_categ"/>
        <!--         <field name="implied_ids" eval="[(4, ref('petty_cash.group_petty_cash'))]"/>-->
    </record>

    <record id="benefit_employee_administrator" model="ir.rule">
        <field name="name">Benefit Administrator full access</field>
        <field ref="model_hr_protection" name="model_id"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_admin_benefit_approve'))]"/>
    </record>


    <record id="employee_Benefit_user" model="ir.rule">
            <field name="name">User: Modify own Benefit only</field>
            <field name="model_id" ref="model_hr_protection"/>
<!--        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>-->
<!--            ['|',('user_id','=',user.id),('user_id','=',False)]     -->
            <field name="domain_force">[('request_by','=',user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('group_user_benefit_approve'))]"/>
    </record>
</data>
</odoo>
