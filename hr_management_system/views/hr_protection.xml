<odoo>
    <data>
        <record id="mo_hr_protection_view_form" model="ir.ui.view">
            <field name="name">mo_hr_protection_view_form</field>
            <field name="model">hr.protection</field>
            <field name="arch" type="xml">
                <form string="Employees Benefits Form">

                    <header>
                        <button name="emp_request_action" states="draft"
                                string="Request" type="object"
                                class="oe_highlight"/>
<!--                                groups="hr_management_system.restrict_employee"/>-->
                        />
                        <button name="hr_manager_action" states="request"
                                string="Manager Approve" type="object"
                                class="oe_highlight"
                                groups="hr_management_system.group_admin_benefit_approve"/>
<!--                                groups="hr_management_system.group_hr_manager_demo"/>-->

                        <button name="hr_administrator_action" states="man_approve"
                                string="Processing" type="object"
                                class="oe_highlight"
                              groups="technician_request.group_Technician_request_manager"/>

                        <button name="reject_action" states="request,man_approve,approve"
                                string="Reject" type="object"
                                class="oe_highlight"
                                groups="hr_management_system.group_admin_benefit_approve"/>
<!--                                groups="hr_management_system.group_hr_manager_demo"/>-->

                        <button name="reset_action" states="approve,reject,return"
                                string="Reset" type="object"
                                groups="hr_management_system.group_admin_benefit_approve"/>
<!--                                groups="hr_management_system.group_hr_manager_demo"/>-->

                        <button name="return_action" states="approve"
                                string="Benefit Return" type="object"
                                groups="hr_management_system.group_admin_benefit_approve"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,request,man_approve,approve,reject,return"/>
                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}"/>
                                <field name="emp_id" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}" />
                                <field name="emp_job_id" force_save="1" />
                                <field name="request_by" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}" />
                                <field name="department_id" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}" />
                                <field name="assigned_to" readonly ='1'/>
                                <field name="doc_attachment_id06" widget="many2many_binary" class="oe_inline" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}"/>
                            </group>
                            <group>
                                <separator/>
                                <field name="date_from" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}"/>
                                <field name="date_to" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Benefit Request">
                                <!--                                <field name="line_ids">-->
                                <form string="Benefit Request">
                                    <group>
                                        <field name="product_id" string="Product" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}"/>
                                        <field name="description" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}"/>
                                        <field name="product_uom" options="{'no_create':True, 'no_open':True} "
                                               string="Volume"/>
                                        <field name="product_qty" string="Quantity" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}"/>
                                        <field name="qty_onhand2" string="On Hand" attrs="{'readonly': [('state','in', ['reject','return','approve'])]}" />
                                    </group>

                                    <separator/>
                                    <field name="product_old_qty" invisible="1"/>
                                    <field name="product_new_qty" invisible="1"/>
                                    <field name="product_amount_qty" invisible="1"/>
                                </form>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="mo_hr_protection_view_tree" model="ir.ui.view">
            <field name="name">mo_hr_protection_view_tree</field>
            <field name="model">hr.protection</field>
            <field name="arch" type="xml">
                <tree string="Employees Benefit Tree">
                    <field name="name"/>
                    <field name="emp_id"/>
                    <field name="emp_job_id"/>
                    <field name="product_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="mo_hr_protection_action" model="ir.actions.act_window">
            <field name="name">Benefits</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.protection</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="mo_hr_employee_form_view_protection" model="ir.ui.view">
            <field name="name">mo.hr.employee.view.form.protection</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <button class="oe_stat_button" name="document_view_protection" type="object" icon="fa-folder-open">
                        <field string="Benefits" name="document_count_protection" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>


        <menuitem id="menu_mo_hr_protection"
                  parent="hr_management_system.menu_hr_informations"
                  name="Benefits"
                  action="mo_hr_protection_action"
                  sequence="2"/>




        <record id="mo_hr_protection_action_tow" model="ir.actions.act_window">
            <field name="name">Benefits</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.protection</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_mo_hr_protection_tow"
                  name="Benefits"
                  action="mo_hr_protection_action_tow"
                  web_icon="hr_management_system,static/description/benefit.png"
                  sequence="3"/>

################################################################################################################################

        <record id="view_stock_pick_form_inherited" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="benefit_id"/>
                    <field name="employee_id"/>
                </xpath>
            </field>
        </record>

#######################################################################################################################################

        <record id="product_template_form_view_inherit_benefits" model="ir.ui.view">
            <field name="name">product.benefits.form.view</field>
            <field name="model">product.template</field>
            <!--          <field name="priority">3</field>-->
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <!--          <field name="groups_id" eval="[(4, ref('mrp.group_mrp_user'))]"/>-->
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <button name="benefits_button" type="object"
                            class="oe_stat_button" icon="fa-folder-open" string="Benefits" widget="statinfo">
                        <field string="" name="document_count_protection"/>
                    </button>
                </div>
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="is_benefit" string="Product is Benefit"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>