<odoo>
    <record model="report.paperformat" id="paperformat_salary_report_report">
        <field name="name">paperformat.salary.report.report</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <report id="salary_report_report"
            model="salary.report.wizard"
            string="Salary Report"
            report_type="qweb-pdf"
            name="hr_management_system.salary_report_report_view"
            paperformat="paperformat_salary_report_report"
            menu="False"/>

    <template id="salary_report_report_view">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <br/>
                <div>
                    <h3 class="text-center">Employee Salary Report</h3>
                    <h4 class="text-center" t-if="date_start">
                        <strong>From</strong>:
                        <t t-esc="date_start"/>
                        <strong>To</strong>:
                        <t t-esc="date_end"/>
                    </h4>
                </div>

                <br/>


            <div class="page">

                <table  style="border-collapse: collapse;border: 2px solid #ddd;font-size:16px; width:100%;padding-top:0;margin-top:0">
                        <tr class="thead-light" style="padding:0px; margin:0px;border-top: 2px solid #ddd;background-color: #f2f2f2;">
                            <th class="text-center" style="padding: 8px;border: 2px solid #ddd;text-align: center;">#</th>
                            <th class="text-center" style="padding: 8px;border: 2px solid #ddd;text-align: center;">Emp No.</th>
                            <th class="text-center" style="padding: 8px;border: 2px solid #ddd;text-align: center;">Name</th>
                        </tr>
                       <t t-set="x" t-value="0"/>
                       <tr t-foreach="docs" t-as="doc" >

                           <td style="padding: 8px;border: 2px solid #ddd;text-align: center;">
                               <t t-set="x" t-value="x+1"/>
                               <t t-esc="x"/>
                           </td>
                           <td style="padding: 8px;border: 2px solid #ddd;text-align: center;">
                               <span t-esc="doc['number']"/>
                           </td>
                          <td style="padding: 8px;border: 2px solid #ddd;text-align: center; ">
                               <span t-esc="doc['employee_id']"/>
                           </td>
                       </tr>
                </table>

            </div>
        </t>
        </t>
    </template>
</odoo>