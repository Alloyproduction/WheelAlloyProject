<odoo>
    <data>
        <record model="ir.module.category" id ="module_category_sales_prices">
        <field name ="name">Sales Prices</field>
        <field name="description">Category For Sales Prices Show</field>
            <field name="sequence">45</field>


        </record>
    <record id="group_sales_hide_Cost" model="res.groups">
        <field name="name">Show Sales Prices </field>
        <field name="category_id" ref="module_category_sales_prices"></field>

    </record>

          <record id="group_sales_hide_no_create" model="res.groups">
        <field name="name">Show Sales Prices_no_create </field>
        <field name="category_id" ref="module_category_sales_prices"></field>

    </record>


        <record id="product_used_rule" model="ir.rule">
            <field name="name">User: Modify own Product used only</field>
            <field name="model_id" ref="model_product_task_used"/>
<!--        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>-->
<!--            ['|',('user_id','=',user.id),('user_id','=',False)]     -->
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4,ref('project.group_project_user'))]"/>
        </record>

          <record id="product_used_rule_manager" model="ir.rule">
            <field name="name">manger: Modify all Product used</field>
            <field name="model_id" ref="model_product_task_used"/>
<!--        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>-->
<!--            ['|',('user_id','=',user.id),('user_id','=',False)]     -->
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4,ref('project.group_project_manager'))]"/>
        </record>


    </data>
</odoo>


