<odoo>
    <data>
 
<record id="project.act_project_project_2_project_task_all" model="ir.actions.act_window">

         <field name="domain"> [ ("is_delete_stage","=",False)]</field>
 </record>


  <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">

         <field name="context">{}</field>
 </record>

         <record id="Sales_Prices_hide_form_view2" model="ir.ui.view">
            <field name="name">sale.order.form.Prices</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
<!--            <field name="groups_id" eval="[(4, ref('product.group_stock_packaging'))]"/>-->
            <field name="arch" type="xml">
                <xpath expr="//page[@name='order_lines']" position="attributes">
                    <attribute name="groups">project_stages_limitation.group_sales_hide_Cost</attribute>
                </xpath>
                   <xpath expr="//page[@name='other_information']" position="attributes">
                    <attribute name="groups">project_stages_limitation.group_sales_hide_Cost</attribute>
                </xpath>
                   <xpath expr="//page[2]" position="attributes">
                    <attribute name="groups">project_stages_limitation.group_sales_hide_Cost</attribute>
                </xpath>
                <xpath expr="//header" position="attributes">
                    <attribute name="groups">project_stages_limitation.group_sales_hide_Cost</attribute>
                    <attribute name="groups">project_stages_limitation.group_sales_hide_Cost</attribute>

                </xpath>

                <xpath expr="//button[@name='action_view_invoice']" position="attributes">
                    <attribute name="groups">project_stages_limitation.group_sales_hide_Cost</attribute>
                </xpath>


                <xpath expr="//form" position="attributes">
                    <attribute name="create">true</attribute>
                    <attribute name="edit">true</attribute>


                    <!--                 <attribute name="no_create">true</attribute>-->
                    <attribute name="groups">project_stages_limitation.group_sales_hide_Cost</attribute>
                </xpath>


                <xpath expr="//tree" position="attributes">
                    <attribute name="create">true</attribute>
                    <attribute name="edit">true</attribute>

                    <!--                     <attribute name="no_create">true</attribute>-->
                    <attribute name="groups">project_stages_limitation.group_sales_hide_Cost</attribute>
                </xpath>


            </field>
        </record>


        <record id="project_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Time stamp">
                        <field name="stage_date" invisible="1"/>
                        <field name="stage_date_2" invisible="1"/>
                        <field name="is_delivery_stage" invisible="1"/>
                        <field name="is_delete_stage" invisible="1"/>
                        <field name="stage_time_ids">
                            <tree string="Time stamp">
                                <field name="project_task_id" invisible="1"/>
                                <field name="stage_from_id" />
                                <field name="stage_to_id" />
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="total_time" />
                                <field name="time_between_stages" invisible="1"/>
                            </tree>
                            <form string="Time stamp">
                                <field name="stage_from_id" />
                                <field name="stage_to_id" />
                                <field name="date_from" />
                                <field name="date_to" />
                            </form>
                        </field>
                    </page>

                     <page string="Product Used In Task">
                        <field name="line_ids">
                            <tree string="Product Used In Task">
                                <field name="sale_name"/>
                                <field name="project_name"/>
                                <field name="task_number"/>
                                <field name="user_id"/>
                                <field name="create_date" string="Date"/>
                                <field name="product_id" />
                                <field name="used_unit" />
                                <field name="product_qty" />
                                <field name="product_cost" />
                                <field name="total_cost" />
                            </tree>
                            <form string="Product Used In Task">
                                <field name="sale_name"/>
                                <field name="project_name"/>
                                <field name="task_number"/>
                                <field name="user_id"/>
                                <field name="create_date" string="Date"/>
                                <field name="product_id" />
                                <field name="used_unit" />
                                <field name="product_qty" />
                                <field name="product_cost" />
                                <field name="total_cost" />
                            </form>
                        </field>
                    </page>


                    <page string="Signature" attrs="{'invisible':[('is_delivery_stage', '!=', True)]}">
                        <label for="alloy_digital_signature" string="Signature" />
                        <h2>
                            <field name="alloy_digital_signature" widget="signature"/>
                        </h2>
                    </page>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="project_task_kanban_inherit" model="ir.ui.view">
            <field name="name">project.task.kanban.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>

            <field name="arch" type="xml">
              <xpath expr="//kanban[1]/templates[1]/t[1]/div[1]/div[1]/div[3]/div[1]/field[@name='activity_ids']" position="after">
                <field name="is_delete_stage" widget="boolean" invisible="True"/>
              </xpath>
            </field>
        </record>

  ###############################################################################################################################
         <record model="ir.ui.view" id="product_task_used_tree">
            <field name="name">Product Used in Task</field>
            <field name="model">product.task.used</field>
            <field name="arch" type="xml">
                <tree string="Product Used in Task">

                    <field name="create_date"/>
                    <field name="user_id"/>
                    <field name="product_id"/>
                   <field name="product_qty" sum="Total Quantity"/>
                    <field name="product_uom_id"/>
                    <field name="used_unit"/>
                    <field name="product_cost" sum="Total Product Cost" widget="monetary"/>
                    <field name="total_cost" sum="Total Product Used Cost" widget="monetary"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="product_task_used_form">
            <field name="name">Product Used in Task form</field>
            <field name="model">product.task.used</field>
            <field name="arch" type="xml">
                <form string="Product Used in Task">
                    <sheet string="Product Used Sheet">
                        <group>
                            <field name="sale_name"/>
                            <field name="project_name"/>
                            <field name="task_number"/>
                            <field name="create_date"/>
                            <field name="user_id"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom_id"/>
                            <field name="used_unit"/>
                            <field name="product_cost"/>
                            <field name="total_cost"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_project_product_used_line_tree" model="ir.actions.act_window">
            <field name="name">Product Used</field>
            <field name="res_model">product.task.used</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="product_task_used_tree"/>
        </record>


        <menuitem id="menu_product_used"
                  name="Product Used"
                  parent="project.menu_projects"
                  action="action_project_product_used_line_tree"
                  sequence="100"/>

##############################################################################################################################
        <record id="product_template_form_view_used" model="ir.ui.view">
            <field name="name">product.template.task.used</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="used_product_unit"/>
                    <field name="unit_cost"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>