    <record id='vehicle_price_view_tree' model='ir.ui.view'>
        <field name="name">vehicle.price.tree</field>
        <field name="model">vehicle.price</field>
        <field name="arch" type="xml">
            <tree string="Car Price">
                <field name="name" string="Name"/>
<!--                <field name="car_name1" string="Car model"/>-->
                <field name="repair_type" string="Repair Type"/>
                <field name="amount" string="Amount"/>
                <field name="description" string="Description"/>
            </tree>
        </field>
    </record>


    <record id='vehicle_price_action' model='ir.actions.act_window'>
        <field name="name">Vehicle Price</field>
        <field name="res_model">vehicle.price</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new price
            </p>
        </field>
    </record>



</odoo>
