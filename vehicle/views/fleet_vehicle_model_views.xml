    <record id='vehicle_name_view_form' model='ir.ui.view'>
        <field name="name">vehicle.price.form</field>
        <field name="model">vehicle.price</field>
        <field name="arch" type="xml">
            <form string="Car Price">
                <sheet>
                    <group>
                        <field name="name" string="Name"/>
<!--                        <field name="car_name1" string="Car model"/>-->
                    </group>

                    <group>
                        <field name="repair_type" string="Repair Type"/>
                        <field name="amount" string="Amount"/>
                        <field name="description" string="Description"/>
