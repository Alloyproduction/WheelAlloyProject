<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>


        <template id="claim_profile_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Customer Claim</h2>


                            <group string="Claim Information">
                                <br></br>
                                <h4>General Claim Information</h4>
                                <table class="table-bordered" width="100%">

                                    <tr>
                                        <td>
                                            <b>Claim Number:</b>
                                        </td>
                                        <td width="50%">
                                            <t t-esc="doc.code"/>
                                            <!--                                            <span t-field="o.name"/>-->
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            <b>Name:</b>
                                        </td>
                                        <td width="50%">
                                            <t t-esc="doc.subject_id"/>
                                            <!--                                            <span t-field="o.name"/>-->
                                        </td>
                                    </tr>


                                    <tr>
                                        <td>
                                            <b>Claim Date:</b>
                                        </td>
                                        <td width="50%">
                                            <t t-esc="doc.date"/>
                                            <!--                                            <span t-field="o.user_id"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Customer Name:</b>
                                        </td>
                                        <td width="50%">
                                            <t t-esc="doc.partner_id.name"/>
                                            <!--                                            <span t-field="o.user_id"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Customer Phone:</b>
                                        </td>
                                        <td width="50%">
                                            <t t-esc="doc.partner_phone"/>
                                            <!--                                            <span t-field="o.user_id"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Description:</b>
                                        </td>
                                        <td width="50%">
                                            <t t-esc="doc.description"/>
                                            <!--                                            <span t-field="o.user_id"/>-->
                                        </td>
                                    </tr>
                                </table>
                                <hr></hr>
                            </group>
                        </div>


                        <group string="Team Information">
                            <br></br>
                            <h4>Follow-up Information</h4>
                            <table class="table-bordered" width="100%">

                                <tr>
                                    <td>
                                        <b>Responsible:</b>
                                    </td>
                                    <td width="50%">
                                        <t t-esc="doc.user_id.name"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <b>Sales Team:</b>
                                    </td>
                                    <td width="50%">
                                        <t t-esc="doc.team_id.name"/>
                                    </td>
                                </tr>
                            </table>
                            <hr></hr>
                        </group>


                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>