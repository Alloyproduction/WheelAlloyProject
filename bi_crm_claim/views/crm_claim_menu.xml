        <record model="ir.ui.view" id="claim_search_view">
            <field name="name">claims.search</field>
            <field name="model">crm.claim</field>
            <field name="arch" type="xml">
                <search string="Search Claims">
                    <field name="code"/>
                    <field name="subject_id"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <field name="partner_phone"/>
                    <field name="sale_id"/>
                    <group string="Filter By">
                        <filter name="by_won" string="Won" domain="[('state','=','stat_won'),('user_id','=',uid)]"/>
                        <filter name="by_lost" string="lost" domain="[('state','=','stat_lost'),('user_id','=',uid)]"/>
                        <filter name="by_draft" string="New" domain="[('state','=','stat_draft'),('user_id','=',uid)]"/>
                        <filter name="by_confirm" string="Confirm"
                                domain="[('state','=','stat_confirmed'),('user_id','=',uid)]"/>
                        <filter name="by_process" string="Process"
                                domain="[('state','=','stat_process'),('user_id','=',uid)]"/>
                        <filter name="by_MyPipeline" string="My Pipeline" domain="[('user_id','=',uid)]"/>
                    </group>
                    <group string="Group By">
                        <filter name="by_user" string="Responsible" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter name="by_team" string="Sales Team" context="{'group_by':'team_id'}"/>
                        <filter name="by_customer" string="Customer" context="{'group_by':'partner_id'}"/>
                    </group>
                </search>
            </field>
