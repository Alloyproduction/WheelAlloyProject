 <record model="ir.ui.view" id="crm_state_graph_view">
            <field name="name">crm.claim.graph</field>
            <field name="model">crm.claim</field>
            <field name="arch" type="xml">

                <graph string="Claims by State"     stacked="true">
                    <field name="state" type="row"/>
                    <field name="state" type="col"/>
                    <field name="state" type="mesure"/>

                </graph>

            </field>
        </record>

  <record model="ir.actions.act_window" id="act_state_graph">
        <field name="name">State of Cliams</field>
        <field name="res_model">crm.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph</field>

    <field name="view_id" ref="bi_crm_claim.crm_state_graph_view"/>
    </record>


    <record model="ir.actions.act_window" id="act_claim_calendar">
        <field name="name">Claim_Date</field>
        <field name="res_model">crm.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">calendar</field>
        <!--            <field name="view_id" ref="openacademy.session_calendar_view"/>-->
    </record>
    <record model="ir.actions.act_window" id="act_claim_form">
        <field name="name">Claim_Info</field>
        <field name="res_model">crm.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="act_claim_kanaban">
        <field name="name">Stage</field>
        <field name="res_model">crm.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
<!--         <field name="view_id" ref="bi_crm_claim.crm_state_form_view"/>-->
    </record>


    <record model="ir.ui.view" id="board_claim_form">
        <field name="name">Claim Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Session Dashboard">
                <board style="1-2">
                    <column>
                        <action
                                string="Claims by States"
                                name="%(bi_crm_claim.act_state_graph)d"
                                height="150"
                                width="510"/>
<!--                        <action-->
<!--                                string="Claim Date"-->
<!--                                name="%(act_claim_calendar)d"/>-->
<!--                        <action-->
<!--                                string="Claim Info"-->
<!--                                name="%(act_claim_form)d"/>-->
                    </column>
                    <column>

                        <action
                                string="Claim Stage"
                                name="%(bi_crm_claim.act_claim_kanaban)d"/>
                    </column>
                </board>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="open_claim_board">
        <field name="name">Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_claim_form"/>
    </record>

    <menuitem
            name="Claim Dashboard" parent="main_crm_claim_menu"
            action="open_claim_board"
            sequence="1"
            id="menu_claim_board"/>

</odoo>