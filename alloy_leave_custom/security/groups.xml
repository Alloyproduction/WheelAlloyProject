<odoo>

    <!-- define access group category -->
    <record id="leave_reqeust_access_categ" model="ir.module.category">
        <field name="name">Leave Request Management</field>
    </record>

    <!-- define access group for manger  -->
    <record id="group_user" model="res.groups">
        <field name="name">Leave / User</field>
        <field name="category_id" ref="leave_reqeust_access_categ"/>
    </record>

    <!-- group of user -->


    <record id="group_department_leave_approve" model="res.groups">
        <field name="name">Leave / Department Approve</field>
        <field name="category_id" ref="leave_reqeust_access_categ"/>
        <field name="implied_ids" eval="[(4,ref('group_user'))]"/>
    </record>

    <record id="group_hr_leave_approve" model="res.groups">
        <field name="name">Leave / HR Approve</field>
        <field name="category_id" ref="leave_reqeust_access_categ"/>
        <field name="implied_ids" eval="[(4,ref('group_user'))]"/>
    </record>

    <record id="group_ceo_leave_approve" model="res.groups">
        <field name="name">Leave / CEO Approve</field>
        <field name="category_id" ref="leave_reqeust_access_categ"/>
        <field name="implied_ids" eval="[(4,ref('group_user'))]"/>
    </record>

    <record id="group_leave_admin" model="res.groups">
        <field name="name">Leave / Admin </field>
        <field name="category_id" ref="leave_reqeust_access_categ"/>
        <field name="implied_ids" eval="[(4,ref('group_user'))]"/>
    </record>


</odoo>