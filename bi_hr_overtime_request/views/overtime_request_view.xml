<?xml version="1.0"  encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_overtime_req_tree" model="ir.ui.view">
      <field name="name">overtime.request.tree</field>
      <field name="model">overtime.request</field>
      <field name="priority">2</field>
      <field name="arch" type="xml">
        <tree string="Overtime Request">

          <field name="employee_id"/>
          <field name="department_id"/>
          <!--          <field name="month"/>-->
          <field name="month_n"/>
          <field name="year"/>
          <field name="start_date"/>
          <field name="end_date"/>
          <field name='include_in_payroll'/>
          <field name="num_of_hours"/>
          <field name="total_delay_hours"/>

        </tree>
      </field>
    </record>

    <record id="view_overtime_req_form" model="ir.ui.view">
      <field name="name">overtime.request.form</field>
      <field name="model">overtime.request</field>
      <field name="priority">2</field>
      <field name="arch" type="xml">
        <form string="Overtime Request">

          <header>
            <button name="confirm_action" string="Confirm"
                    type="object" states="new"
            />

            <button name="back_to_new" string="Back to NEW"
                    type="object" states="refuse,done"
            />
            <button name="first_approve_action" string="Approve"
                    type="object" states="first_approve"
                    groups="bi_hr_overtime_request.hr_manager_overtime_id"
            />
            <button name="dept_approve_action" string="Department Approve"
                    type="object" states="dept_approve"
                    groups="bi_hr_overtime_request.dept_manager_overtime_id"
            />
            <button name="refuse_action" string="Refuse" type="object" states="first_approve,dept_approve"
                    groups="bi_hr_overtime_request.hr_manager_overtime_id,bi_hr_overtime_request.dept_manager_overtime_id"
            />
            <field name="state" widget="statusbar" statusbar_visible="new,first_approve,dept_approve,done"/>
          </header>

          <sheet>
            <h2>
              <field name="employee_id" attrs="{'readonly' : [('state','!=','new')]}"/>
            </h2>
            <!--            <h2><field name="employee_id"/></h2>-->
            <group>
              <group>
                <!--                <field name="employee_id"/>-->
                <!--                <field name="start_date" attrs="{'readonly' : [('state','!=','new')]}" t-options="{'widget': 'date'}"/>-->
                <field name="start_date" attrs="{'readonly' : [('state','!=','new')]}"/>
                <field name="department_id" attrs="{'readonly' : [('state','!=','new')]}"/>
                <field name="department_manager_id" attrs="{'readonly' : [('state','!=','new')]}"/>
                <field name="approve_date"/>
                <field name="approve_by_id"/>
                <field name="num_of_hours"/>
                <field name="total_delay_hours"/>
                <field name="num_of_hours2" invisible="1"/>
                <field name="month" invisible="1"/>
                <field name="year" invisible="1"/>
                <field name="month_n" invisible="1"/>
              </group>

              <group>
                <!--                <field name="end_date" attrs="{'readonly' : [('state','!=','new')]}" t-options="{'date_only': True}"/>-->
                <field name="end_date" attrs="{'readonly' : [('state','!=','new')]}"
                       t-options="{'format':'MMM d, yyyy'}"/>
                <field name="include_in_payroll" attrs="{'readonly' : [('state','!=','new')]}"/>
                <field name="dept_approve_date"/>
                <field name="dept_manager_id"/>
              </group>
            </group>
            <notebook>
              <page string="Notes">
                <field name="notes"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <record id="overtime_req_action" model="ir.actions.act_window">
      <field name="name">Overtime Request</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">overtime.request</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,kanban</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create"></p>
        <p></p>
      </field>
    </record>

    <record id="overtime_req_action_hr" model="ir.actions.act_window">
      <field name="name">Overtime Request To Approve</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">overtime.request</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,kanban</field>
      <field name="domain">[('state', '=', 'first_approve')]</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create"></p>
        <p></p>
      </field>
    </record>

    <record id="overtime_req_action_dept" model="ir.actions.act_window">
      <field name="name">Overtime Request To Approve By Department</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">overtime.request</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,kanban</field>
      <field name="domain">[('state', '=', 'dept_approve')]</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create"></p>
        <p></p>
      </field>
    </record>

    <!--    <menuitem id="sub_menu_employee_overtime" parent="hr.menu_hr_root"-->
    <!--              name="Over Time" sequence="10"-->
    <!--    />    -->
    <menuitem id="sub_menu_employee_overtime" name="Overtime and Delays" sequence="88"
              web_icon="bi_hr_overtime_request,static/description/icon.png"
    />
    <menuitem action="overtime_req_action" id="menu_overtime" sequence="2"
              parent="sub_menu_employee_overtime" name="Records Months"
    />
    <menuitem action="overtime_req_action_hr" id="menu_overtime_hr" parent="sub_menu_employee_overtime"
              name="Overtime Request To Approve" sequence="3" groups="hr_manager_overtime_id"
    />
    <menuitem action="overtime_req_action_dept" id="menu_overtime_dept" parent="sub_menu_employee_overtime"
              name="To Approve By Department" sequence="4"
              groups="bi_hr_overtime_request.dept_manager_overtime_id"
    />

  </data>
</odoo>