        <record id="bank_statement_draft_form_inherit_inherit" model="ir.ui.view">
            <field name="name">bank.statement.draft.form.inherit.inherit</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="replace">
                <header>
                    <field name="all_lines_reconciled" invisible="1" />

                        <button name="%(action_bank_reconcile_bank_statements)d" string="Reconcile" type="action" class="oe_highlight"
                            attrs="{'invisible':['|','|',('all_lines_reconciled','=',True),('line_ids','=',[])]}"
                            groups="petty_cash.group_cash_manager,
                                    petty_cash.group_cash_check,
                                    petty_cash.group_cash_review,
                                    petty_cash.group_cash_approve,
                                    petty_cash.group_cash_validate"/>

                        <button name="action_prepar"
                                states="open"
                                groups="petty_cash.group_cash_prepare,petty_cash.group_cash_manager"
                                string="Prepare" type="object"/>


                        <button name="action_check" type="object"
                                groups="petty_cash.group_cash_check,petty_cash.group_cash_manager"
                                string="Check"
                                states="stat_prepar"
                                class="oe_highlight"/>

                        <button name="action_audit" type="object"
                                groups="petty_cash.group_cash_audit,petty_cash.group_cash_manager"
                                string="Audit"
                                states="stat_check"
                                class="oe_highlight"/>

                        <button name="action_review" type="object"
                                groups="petty_cash.group_cash_review,petty_cash.group_cash_manager"
                                string="Review"
                                states="stat_audit"
                                class="oe_highlight"/>

                        <button name="check_confirm_bank" string="Approve and Validate" type="object" class="oe_highlight"
                                attrs="{'invisible':['|','|',('all_lines_reconciled','=',False),('line_ids','=',[]),('state', '!=', 'stat_review')]}"
                                groups="petty_cash.group_cash_validate,petty_cash.group_cash_manager"/>

                        <button name="button_draft"
                                states="confirm"
                                string="Reset to New" type="object"
                                groups="petty_cash.group_cash_validate,petty_cash.group_cash_manager"/>

                    <field name="state" widget="statusbar" statusbar_visible="open,stat_prepar,stat_check,stat_audit,stat_review,confirm"/>
                </header>

                </xpath>


<!--                <xpath expr="//field[@name='state']" position="replace">-->
<!--                    <field name="state" widget="statusbar"-->
<!--                           statusbar_visible="open,stat_prepar,stat_check,stat_recheck,stat_approve,confirm"/>-->
<!--                </xpath>-->


                <xpath expr="//field[@name='name']" position="before">
                    <div class="oe_title">
                        <h2>
                            <field name="code" readonly="1"/>
                        </h2>
                    </div>
                </xpath>

                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
            </field>
        </record>

