<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>

       <record id="view_stock_pick_form_inherited" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">


               <xpath expr="//field[@name='origin']" position="after">
                  <field name="source_request" />
                    <field name="employee_user_id" />
                   <field name="manager_by" />
                </xpath>


        </field>
    </record>

  <record id="view_stock_pick_tree_inherited" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>

        <field name="arch" type="xml">


               <xpath expr="//field[@name='origin']" position="after">
                  <field name="source_request" />
                    <field name="employee_user_id" />
               </xpath>
<!--            <xpath expr="//tree" position="attributes">-->
<!--                    <attribute name="default_order">date_start desc</attribute>-->
<!--            </xpath>-->

        </field>
    </record>
  </data>
</odoo>