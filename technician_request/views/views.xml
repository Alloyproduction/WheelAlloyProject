<odoo>
  <data>

     <record id="view_model_location_form_inherited" model="ir.ui.view">
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">


             <xpath expr="//page[2]" position="after">
                 <page  string="Access Location" name="access_location" >
                     <group>
                                <group  >
                                    <field name="location_from"/>
                   <field name="location_to"/>
                                </group>
                     <group>
                         <field name="operation_type" />
                     </group>
                     </group>

                    </page>

                </xpath>


        </field>
    </record>




 <record id="view_stock_Location_form_inherited" model="ir.ui.view">
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">


               <xpath expr="//field[@name='partner_id']" position="after">
                  <field name="manager_ids" widget="many2many_tags"/>

                </xpath>


        </field>
    </record>




    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="technician_request.action_window">
      <field name="name">Techician Requests</field>
      <field name="res_model">tech.request</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Techician Requests" id="technician_request.menu_root"
              web_icon="technician_request,static/description/icon.png"/>


<!--    <menuitem name="Menu 1" id="technician_request.menu_1" parent="technician_request.menu_root"/>-->


    <menuitem name="All Requests" id="technician_request.menu_1_list" parent="technician_request.menu_root"
              action="technician_request.action_window"/>


