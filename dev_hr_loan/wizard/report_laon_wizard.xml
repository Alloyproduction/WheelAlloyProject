<odoo>
  <data>

    <record id="report_for_loan_form_view" model="ir.ui.view">
      <field name="name">report.for.loan.form.view</field>
      <field name="model">report.loan.c</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Loan Report">
          <group>
            <group>
              <field name="date_from" widget="date"
                     attrs="{'required':[('specific_date', '=', True)], 'invisible':[('specific_employee', '=', True)]}"/>
            </group>
            <group>
              <field name="date_to" widget="date"
                     attrs="{'required':[('specific_date', '=', True)], 'invisible':[('specific_employee', '=', True)]}"/>
            </group>
            <group>
              <field name="specific_employee"
                     attrs="{'required':[('specific_date', '=', True)], 'invisible':[('specific_employee', '=', True)]}"
                     force_save="1"/>
              <field name="specific_date"
                     attrs="{'required':[('specific_employee', '=', True)], 'invisible':[('specific_date', '=', True)]}"
                     force_save="1"/>
            </group>
            <group>
              <field name="employee_loan"
                     attrs="{'required':[('specific_employee', '=', True)], 'invisible':[('specific_date', '=', True)]}"
                     options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"
              />
              <!--                     widget="selection"-->
            </group>
          </group>
          <footer>
            <button name="get_loan_report" string="Get Report" type="object" class="oe_highlight"/>
            <button string="Cancel" special="cancel" class="oe_link"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_loan_report_wizardx" model="ir.actions.act_window">
      <field name="name">Loans Report</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">report.loan.c</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="report_for_loan_form_view"/>
      <field name="target">new</field>
    </record>

    <menuitem id="menu_loan_report_wizard_main" action="action_loan_report_wizardx"
              sequence="999" parent="dev_hr_loan.menu_main_employee_loan"
              name="Loans Report"
    />

  </data>
</odoo>