<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="wiz_commission_report_view" model="ir.ui.view">
		<field name="name">commission.report.wizard.view</field>
		<field name="model">commission.report.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="date_from" />
					<field name="date_to" />
					<field name="filter_by" />
					<field name="advisor_id"
						   attrs="{'required': [('filter_by', 'in', ['advisor','both'])],'invisible': [('filter_by', '=', 'customer')]}"
						   options="{'no_create': True,'no_edit':True}"/>
					<field name="customer_id"
						   attrs="{'required': [('filter_by', 'in', ['customer','both'])],'invisible': [('filter_by', '=', 'advisor')]}"
						   options="{'no_create': True,'no_edit':True}"/>
				</group>
				<footer>
					<button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight" />
					or
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_commission_report_wizard2" model="ir.actions.act_window">
		<field name="name">commission report Wizard</field>
		<field name="res_model">commission.report.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="wiz_commission_report_view"/>
<!--		<field name="binding_model_id" ref="account.model_account_move" />-->
		<field name="target">new</field>
	</record>

	 <menuitem id="menu_commission_account_report"
			  name="Commission Report"
			  action="action_commission_report_wizard2"
			  parent="alloy_commission.account_commission_root_menu"
			  sequence="8"
			  />

</odoo>
