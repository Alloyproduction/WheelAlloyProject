<odoo>
  <data>


            <record id="cron_do_task1" forcecreate='True' model="ir.cron">
              <field name="name">Do -Task_send_Mail</field>
              <field eval="True" name="active"/>
              <field name="user_id" ref="base.user_root"/>
              <field name="interval_number">1</field>
              <field name="interval_type">days</field>
              <field name="numbercall">-1</field>
              <field name="model_id" ref="model_alloy_send"/>
              <field name="state">code</field>
              <field name="function">model.cron_do_task()</field>
              <field name="code">model.cron_do_task()</field>
        </record>



