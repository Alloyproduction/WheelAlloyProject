    <record model="ir.ui.view" id="hr_employee_document_inherit_form_view">
        <field name="name">hr.employee.form.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol">
                    <field string="Documents" name="document_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <record id="emp_documents_action" model="ir.actions.act_window">
        <field name="name">Employees Documents</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.document</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="emp_documents_menuitem"
          name="Employees Documents"
          parent="hr.menu_human_resources_configuration"
          sequence="9"
